# ========================================
# MOOD LOG APP - CONFIGURACIÓN DE PRODUCCIÓN
# ========================================
# IMPORTANTE: Copia este archivo como .env y configura los valores reales
# NO commitees el archivo .env al repositorio

# ========================================
# FIREBASE CONFIGURATION
# ========================================
# Obtén estos valores desde Firebase Console > Project Settings > General
VITE_FIREBASE_API_KEY=your_firebase_api_key_here
VITE_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
VITE_FIREBASE_APP_ID=your_app_id
VITE_FIREBASE_MEASUREMENT_ID=your_measurement_id

# ========================================
# OPENAI CONFIGURATION
# ========================================
# Para análisis de IA de estado de ánimo
VITE_OPENAI_API_KEY=your_openai_api_key_here

# ========================================
# SENTRY CONFIGURATION
# ========================================
# Para monitoreo de errores en producción
VITE_SENTRY_DSN=your_sentry_dsn_here

# ========================================
# GOOGLE ANALYTICS
# ========================================
# Para métricas de uso y analytics
VITE_GA_MEASUREMENT_ID=your_ga_measurement_id

# ========================================
# CONFIGURACIÓN DE ENTORNO
# ========================================
# Determina si estamos en desarrollo o producción
NODE_ENV=production
VITE_APP_ENV=production

# ========================================
# CONFIGURACIÓN DE API
# ========================================
# URL base para llamadas a API (si tienes backend separado)
VITE_API_URL=https://your-api-domain.com/api

# ========================================
# CONFIGURACIÓN DE NOTIFICACIONES
# ========================================
# Para notificaciones push
VITE_VAPID_PUBLIC_KEY=your_vapid_public_key_here

# ========================================
# CONFIGURACIÓN DE FEATURES
# ========================================
# Habilita/deshabilita features específicas
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_ERROR_TRACKING=true
VITE_ENABLE_PUSH_NOTIFICATIONS=true
VITE_ENABLE_AI_ANALYSIS=true

# ========================================
# CONFIGURACIÓN DE DESARROLLO
# ========================================
# Solo para desarrollo local
# VITE_DEBUG_MODE=true
# VITE_MOCK_API=false
