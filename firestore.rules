rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read and write their own user profile
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Users can read and write their own mood logs
    match /moodLogs/{logId} {
      allow read, write: if request.auth != null && 
        (resource.data.userId == request.auth.uid || 
         request.auth.token.role == 'psychologist');
    }
    
    // Psychologists can read all user profiles and mood logs
    match /{document=**} {
      allow read, write: if request.auth != null && 
        request.auth.token.role == 'psychologist';
    }
    
    // Chat messages - users can read/write their own conversations
    match /conversations/{conversationId} {
      allow read, write: if request.auth != null && 
        (resource.data.participants[request.auth.uid] != null ||
         request.auth.token.role == 'psychologist');
    }
    
    // Messages within conversations
    match /conversations/{conversationId}/messages/{messageId} {
      allow read, write: if request.auth != null && 
        (get(/databases/$(database)/documents/conversations/$(conversationId)).data.participants[request.auth.uid] != null ||
         request.auth.token.role == 'psychologist');
    }
  }
}
