rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // ========================================
    // REGLAS SIMPLIFICADAS PARA DEBUG
    // ========================================
    
    // Función helper para verificar autenticación
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Función helper para verificar que el usuario es el propietario
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // ========================================
    // COLECCIONES PRINCIPALES
    // ========================================
    
    // Colección de usuarios - permitir lectura/escritura para usuarios autenticados
    match /users/{userId} {
      allow read, write: if isAuthenticated();
    }
    
    // Colección de mood logs - permitir lectura/escritura para usuarios autenticados
    match /moodLogs/{logId} {
      allow read, write: if isAuthenticated();
    }
    
    // Colección de análisis de IA - permitir lectura/escritura para usuarios autenticados
    match /aiAnalysis/{analysisId} {
      allow read, write: if isAuthenticated();
    }
    
    // Colección de notificaciones - permitir lectura/escritura para usuarios autenticados
    match /notifications/{notificationId} {
      allow read, write: if isAuthenticated();
    }
    
    // Colección de configuración de usuario - permitir lectura/escritura para usuarios autenticados
    match /userSettings/{userId} {
      allow read, write: if isAuthenticated();
    }
    
    // Colección de estadísticas de usuario - permitir lectura/escritura para usuarios autenticados
    match /userStats/{userId} {
      allow read, write: if isAuthenticated();
    }
    
    // Colección de logros - permitir lectura/escritura para usuarios autenticados
    match /achievements/{achievementId} {
      allow read, write: if isAuthenticated();
    }
    
    // Colección de sesiones de psicólogo - permitir lectura/escritura para usuarios autenticados
    match /psychologistSessions/{sessionId} {
      allow read, write: if isAuthenticated();
    }
    
    // Colección de mensajes - permitir lectura/escritura para usuarios autenticados
    match /messages/{messageId} {
      allow read, write: if isAuthenticated();
    }
    
    // Colección de conversaciones - permitir lectura/escritura para usuarios autenticados
    match /conversations/{conversationId} {
      allow read, write: if isAuthenticated();
    }
    
    // Colección de configuración de la app - solo lectura para usuarios autenticados
    match /appConfig/{configId} {
      allow read: if isAuthenticated();
    }
    
    // Colección de logs de auditoría - permitir lectura/escritura para usuarios autenticados
    match /auditLogs/{logId} {
      allow read, write: if isAuthenticated();
    }
    
    // Colección de respaldos - permitir lectura/escritura para usuarios autenticados
    match /backups/{backupId} {
      allow read, write: if isAuthenticated();
    }
    
    // Colección de userAchievements - permitir lectura/escritura para usuarios autenticados
    match /userAchievements/{achievementId} {
      allow read, write: if isAuthenticated();
    }
    
    // ========================================
    // REGLA DE RESPALDO SEGURA
    // ========================================
    // Denegar todo lo que no esté explícitamente permitido
    match /{document=**} {
      allow read, write: if false;
    }
  }
}