rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // ========================================
    // REGLAS PARA PERFILES DE USUARIOS
    // ========================================
    match /users/{userId} {
      // Los usuarios pueden leer y escribir solo su propio perfil
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Los psicólogos pueden leer todos los perfiles de usuarios
      allow read: if request.auth != null && 
        request.auth.token.role == 'psychologist';
    }
    
    // ========================================
    // REGLAS PARA REGISTROS DE ESTADO DE ÁNIMO
    // ========================================
    match /moodLogs/{logId} {
      // Los usuarios pueden leer y escribir solo sus propios logs
      allow read, write: if request.auth != null && 
        (resource.data.userId == request.auth.uid || 
         request.data.userId == request.auth.uid);
      
      // Los psicólogos pueden leer todos los logs de sus pacientes
      allow read: if request.auth != null && 
        request.auth.token.role == 'psychologist';
    }
    
    // ========================================
    // REGLAS PARA CONVERSACIONES DE CHAT
    // ========================================
    match /conversations/{conversationId} {
      // Los usuarios pueden leer/escribir conversaciones donde participan
      allow read, write: if request.auth != null && 
        (resource.data.participants[request.auth.uid] != null ||
         request.data.participants[request.auth.uid] != null);
      
      // Los psicólogos pueden leer/escribir todas las conversaciones
      allow read, write: if request.auth != null && 
        request.auth.token.role == 'psychologist';
    }
    
    // ========================================
    // REGLAS PARA MENSAJES DENTRO DE CONVERSACIONES
    // ========================================
    match /conversations/{conversationId}/messages/{messageId} {
      // Los usuarios pueden leer/escribir mensajes en conversaciones donde participan
      allow read, write: if request.auth != null && 
        (get(/databases/$(database)/documents/conversations/$(conversationId)).data.participants[request.auth.uid] != null ||
         request.auth.token.role == 'psychologist');
    }
    
    // ========================================
    // REGLAS PARA SESIONES DE PSICÓLOGOS
    // ========================================
    match /sessions/{sessionId} {
      // Los psicólogos pueden leer/escribir sus propias sesiones
      allow read, write: if request.auth != null && 
        (resource.data.psychologistId == request.auth.uid ||
         request.data.psychologistId == request.auth.uid);
      
      // Los usuarios pueden leer sus propias sesiones
      allow read: if request.auth != null && 
        (resource.data.userId == request.auth.uid);
    }
    
    // ========================================
    // REGLAS PARA REPORTES Y ANÁLISIS
    // ========================================
    match /reports/{reportId} {
      // Los psicólogos pueden leer/escribir todos los reportes
      allow read, write: if request.auth != null && 
        request.auth.token.role == 'psychologist';
      
      // Los usuarios pueden leer solo sus propios reportes
      allow read: if request.auth != null && 
        resource.data.userId == request.auth.uid;
    }
    
    // ========================================
    // REGLAS PARA NOTIFICACIONES
    // ========================================
    match /notifications/{notificationId} {
      // Los usuarios pueden leer/escribir solo sus propias notificaciones
      allow read, write: if request.auth != null && 
        (resource.data.userId == request.auth.uid ||
         request.data.userId == request.auth.uid);
    }
    
    // ========================================
    // REGLAS PARA CONFIGURACIONES DE USUARIO
    // ========================================
    match /userSettings/{userId} {
      // Los usuarios pueden leer/escribir solo sus propias configuraciones
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // ========================================
    // REGLAS PARA METADATOS Y ESTADÍSTICAS
    // ========================================
    match /analytics/{document=**} {
      // Solo los psicólogos pueden acceder a analytics
      allow read, write: if request.auth != null && 
        request.auth.token.role == 'psychologist';
    }
    
    // ========================================
    // REGLAS PARA ARCHIVOS Y MEDIA
    // ========================================
    match /uploads/{userId}/{allPaths=**} {
      // Los usuarios pueden leer/escribir solo sus propios archivos
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Los psicólogos pueden leer archivos de sus pacientes
      allow read: if request.auth != null && 
        request.auth.token.role == 'psychologist';
    }
    
    // ========================================
    // REGLAS PARA LOGS DE SISTEMA
    // ========================================
    match /systemLogs/{logId} {
      // Solo administradores pueden acceder a logs del sistema
      allow read, write: if request.auth != null && 
        request.auth.token.role == 'admin';
    }
    
    // ========================================
    // REGLAS PARA BACKUP Y MIGRACIÓN
    // ========================================
    match /backups/{backupId} {
      // Solo administradores pueden acceder a backups
      allow read, write: if request.auth != null && 
        request.auth.token.role == 'admin';
    }
    
    // ========================================
    // REGLAS ADICIONALES PARA COMPATIBILIDAD
    // ========================================
    
    // Psychologists collection - public read, admin write
    match /psychologists/{psychologistId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
        (request.auth.token.role == 'admin' || 
         request.auth.uid == psychologistId);
    }
    
    // Daily checks - users can read/write their own
    match /dailyChecks/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Achievements - users can read their own
    match /achievements/{achievementId} {
      allow read, write: if request.auth != null && 
        resource.data.userId == request.auth.uid;
    }
    
    // Chat messages - users can read/write their own conversations
    match /chatMessages/{messageId} {
      allow read, write: if request.auth != null && 
        (resource.data.senderId == request.auth.uid || 
         resource.data.receiverId == request.auth.uid);
    }
    
    // User achievements - users can read/write their own
    match /userAchievements/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}